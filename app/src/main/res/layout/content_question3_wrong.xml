<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Question3WrongActivity"
    tools:showIn="@layout/activity_question3_wrong">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_alignParentTop="true"

        android:gravity="center"
        android:text="It’s a tragedy what happened. Sadly I can’t help you with the investigation. At the time of the murder I was discussing war strategies with the Night King. We didn’t even know it happened until just a minute ago."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffaa976c"/>

    <ImageView
        android:id="@+id/dogo"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/image_khal_drogo" />
    <Button
        android:id="@+id/angry_btn"

        android:layout_width="124dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:onClick="continueWithGame"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Continue"
        android:textColor="#B5B5B5"
        android:textSize="13sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>